<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
	xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	
	<persistence-unit name="default" transaction-type="RESOURCE_LOCAL">
	
 		<non-jta-data-source>java:/comp/env/jdbc/@datasource@</non-jta-data-source>
 		
		<class>pereira.vinicio.marcos.JavaOO.model.entity.Cargo</class>
		<class>pereira.vinicio.marcos.JavaOO.model.entity.Funcionario</class>
		<class>pereira.vinicio.marcos.JavaOO.model.entity.Venda</class>
		
		<properties>
			<property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect" />
			<property name="hibernate.show_sql" value="true" />
	    </properties>

	</persistence-unit>
	
</persistence>
